{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "paths": {
      "@dtos": [
        "./dtos"
      ],
      "@enums": [
        "./enums"
      ],
      "@configs": [
        "./configs"
      ],
      "@guards": [
        "./guards"
      ],
      "@clients": [
        "./clients"
      ],
      "@helpers": [
        "./helpers"
      ],
      "@modules": [
        "./modules"
      ],
      "@constants": [
        "./constants"
      ],
      "@decorators": [
        "./decorators"
      ],
      "@interceptors": [
        "./interceptors"
      ]
    },
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  }
}
